create table ras_log(
  log_id number generated always as identity,
  log_data timestamp default current_timestamp,
  log_user varchar2(100) default user,
  log_type varchar2(50) default 'LOG',
  log_txt varchar2(255),
  log_cdata clob,
  log_bdata blob,
  primary key (log_id)
);

comment on table ras_log is 'Table stores system logs, including user data, log type, and additional log information.';
comment on column ras_log.log_id is 'Unique identifier for each log entry (auto-generated identity).';
comment on column ras_log.log_data is 'Timestamp of when the log was created (defaults to current system timestamp).';
comment on column ras_log.log_user is 'Username of the user who triggered the log (defaults to current user).';
comment on column ras_log.log_type is 'Type or category of the log (defaults to ''LOG'').';
comment on column ras_log.log_txt is 'Short text message associated with the log entry.';
comment on column ras_log.log_cdata is 'Clob field for storing large text data related to the log.';
comment on column ras_log.log_bdata is 'Blob field for storing binary data related to the log (e.g., files, images).';

create index idx_ras_log_user_type on ras_log (log_user, log_type);
create index idx_ras_log_id_data on ras_log (log_id, log_data);
create index idx_ras_log_txt on ras_log (log_txt) indextype is ctxsys.context;
create index idx_ras_log_data on ras_log (log_data);



