create table ras_devices (
  dev_id            number generated always as identity,
  dev_u_id          number not null,
  dev_name          varchar2(100) not null,
  dev_type          varchar2(50),
  dev_description   clob,
  dev_rental_price  number(10, 2) not null,
  dev_avail_status  varchar2(5) default 'A' not null, 
  dev_rental_period interval day to second,
  dev_created       date default sysdate not null,
  dev_created_by    varchar2(255) default user not null,
  dev_updated_by    varchar2(255),
  dev_updated       date, 
  primary key (dev_id), 
  constraint fk_device_user foreign key (dev_u_id) references ras_users(u_id) on delete cascade
);

comment on table ras_devices is 'table storing information about devices available for rent';
comment on column ras_devices.dev_id is 'unique identifier for the device';
comment on column ras_devices.dev_u_id is 'identifier of the user who owns the device';
comment on column ras_devices.dev_name is 'device name';
comment on column ras_devices.dev_type is 'type of device (e.g., tool, vehicle)';
comment on column ras_devices.dev_description is 'device description';
comment on column ras_devices.dev_rental_price is 'rental price of the device';
comment on column ras_devices.dev_avail_status is 'availability status of the device';
comment on column ras_devices.dev_rental_period is 'minimum rental period for the device (e.g., 1h, 1d, 1w)';

create index idx_devices_u_id on ras_devices(dev_u_id);
create index idx_devices_name on ras_devices(dev_name);
create index idx_devices_avail_status on ras_devices(dev_avail_status);